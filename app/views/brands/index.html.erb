<div class="max-w-3xl mx-auto px-4 my-16">
  <div class="flex items-center justify-between pb-6 border-b dark:border-slate-700">
    <h1 class="text-3xl font-bold">Brands</h1>
    <div class="flex items-center justify-end">
      <%= link_to "New Brand", new_brand_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div id="brands" class="divide-y dark:text-slate-700 mb-10">
    <% @brands.each do |brand| %>
      <div class="py-3">
        <%= render brand %>

        <%= link_to "View brand", brand, class: "btn-link inline-block my-3" %>
      </div>
    <% end %>
  </div>
</div>
