<div class="max-w-3xl mx-auto px-4 my-16">
  <div class="flex items-center justify-between pb-6 border-b dark:border-slate-700">
    <h1 class="text-3xl font-bold">Stacks</h1>
    <div class="flex items-center justify-end">
      <%= link_to "New Stack", new_stack_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div id="stacks" class="divide-y dark:text-slate-700 mb-10">
    <% @stacks.each do |stack| %>
      <div class="py-4 flex items-center justify-between">
        <h3 class="font-medium text-lg"><%= link_to stack.title, stack %></h3>

        <%= link_to "View stack", stack, class: "btn-primary btn-sm btn" %>
      </div>
    <% end %>
  </div>
</div>
